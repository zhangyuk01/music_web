<h1>歌曲列表</h1>

<table>
  <thead>
    <tr>
      <th id="th1">歌曲名称:</th>
      <th>歌曲类型:</th>
      <th>歌手:</th>
      <th>上传文件:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.name %></td>
        <td><%= song.song_type %></td>
        <td><%= song.singer %></td>
        <td><%= song.img %></td>
        <td></td>
        <td><%= link_to '显示详细内容', song %></td>
        <td>    </td>
        <td><%= link_to '编辑', edit_song_path(song) %></td>
        <td>    </td>
        <td><%= link_to '删除', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td>    </td>
      </tr>
    <% end %>
  </tbody>
</table>

