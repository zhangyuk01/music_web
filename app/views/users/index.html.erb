<h1>用户列表</h1>
<table>
  <thead>
    <tr>
      <th>姓名:</th>
      <th>性别:</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.sex %></td>
        <td><%= link_to '显示', user %></td>
        <td><%= link_to '编辑', edit_user_path(user) %></td>
        <td><%= link_to '删除', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div width="100%">
<%= image_tag '540ec5e1cc78f.png'%>
</div>

